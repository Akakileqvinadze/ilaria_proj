# 1) official lightweight Python image
FROM python:3.10-slim

# 2) workdir inside container
WORKDIR /app

# 3) install system dependencies (for some pip packages)
RUN apt-get update && apt-get install -y \
    build-essential \
    && rm -rf /var/lib/apt/lists/*

# 4) Copy requirements file first (for caching layers)
COPY requirements.txt /app/

# 5) Install Python dependencies
RUN pip install --no-cache-dir -r requirements.txt

# 6) Copy your FastAPI project files
COPY . /app

# 7) Expose port uvicornáƒ¡
EXPOSE 8000

# 8) Run Uvicorn server (production mode)
CMD ["uvicorn", "app.main:app", "--host", "0.0.0.0", "--port", "8000"]
